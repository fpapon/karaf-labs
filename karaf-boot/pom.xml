                        <image>openjdk:alpine</image>
                    </from>
                    <to>
<!--                        <image>localhost:5000/karaf-boot</image>-->
                        <image>fpaponapache.azurecr.io/fpaponapache/karaf-boot:${project.version}</image>
                        <auth>
                            <username>fpaponapache</username>
                            <password>hjNjCyee7cW=7GQl/2a7+XWniCcQfvBr</password>
                        </auth>
                    </to>
                    <container>
                        <entrypoint>
                            <entrypoint>export</entrypoint>
                        </entrypoint>
                        <args>
                            <arg>karaf</arg>
                            <arg>run</arg>
                        </args>
                        <environment>
                            <KARAF_INSTALL_PATH>/opt</KARAF_INSTALL_PATH>
                            <KARAF_HOME>$KARAF_INSTALL_PATH/apache-karaf</KARAF_HOME>
                            <PATH>$PATH:$KARAF_HOME/bin</PATH>
                        </environment>
                        <ports>
                            <port>8101</port>
                            <port>1099</port>
                            <port>44444</port>
                            <port>8181</port>
                        </ports>
                    </container>
                    <extraDirectories>
                        <paths>
                            <path>target/docker</path>
                        </paths>
                        <permissions>
                            <permission>
                                <file>/opt/apache-karaf/bin/karaf</file>
                                <mode>755</mode>
                            </permission>
                        </permissions>
                    </extraDirectories>
                </configuration>
            </plugin>
        </plugins>
    </build>
